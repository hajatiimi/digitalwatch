TRANSITION:
    S:  Clock.Running 
    N:  Clock.Running 
    T:  1
    O:  gui.GUI.increaseTimeByOne()


TRANSITION:
    S:  Backlight.Off
    N:  Backlight.On
    E:  lightOn
    O:  gui.setIndiglo()

